import java.util.Scanner;
import java.io.*;
  
public class Main {
  public static void main(String[] args) throws IOException {
    BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
    char[] a = br.readLine().toUpperCase().toCharArray();
    int start = 0;
    int end = a.length - 1;
    String ans = "YES";
    
    // 만약 글자 개수가 홀수라면 no 출력 -> 아님, 홀수여도 대칭 이룰 수 있음!
    // 만약 글자 개수가 짝수라면 while(start<end)로 start, end가 같은지 확인하기 - 투포인터
    
    while(start <= end) {
      if(a[start] == a[end]) {
        start++;
        end--;
      } else {
        ans = "NO";
        break;
      }
    }
    
    System.out.println(ans);
    return ;
  }
}
